{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./output",
    "composite": true,
    "removeComments": true,
    "downlevelIteration": true,

    "strict": true,
   
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./lib",
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
  
    "forceConsistentCasingInFileNames": true
  }
}
